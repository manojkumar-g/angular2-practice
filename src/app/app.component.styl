main
    display: flex
    flex-direction: column
    width: 960px
    margin-top 100px
    height: 100%
    -webkit-box-shadow: 0px 0px 31px -4px rgba(0,0,0,0.75)
    -moz-box-shadow: 0px 0px 31px -4px rgba(0,0,0,0.75)
    box-shadow: 0px 0px 31px -4px rgba(0,0,0,0.75)
    padding: 30px
.inputs
    background-color: #3CBC8D
    padding: 5px
    display: flex
    flex-flow: wrap column
    input
        width: 100%
        padding: 12px 20px
        margin: 8px 0
    button
        background-color: tomato
        border: none
        color: white
        padding: 16px 32px
        text-decoration: none
        margin: 4px 2px
        cursor: pointer
    select
      width 200px
      font-family Ubuntu
      font-size 1.2em
      padding 20px
      margin 20px 0px
